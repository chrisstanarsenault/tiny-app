<h1>Tiny-App Test Header!!</h1>

<% if (username){ %>
<p>Logged in as:
  <%= username %>
</p>
<form action="/logout" method="POST">
  <input type="submit" value="LOGOFF">
</form>
<% } else {%>
<p>Not Signed in: Please log in</p>
<form action="/login" method="POST" style="margin-top: 10px">
  <input id="name" type="text" name="username" placeholder="Who are you!?" style="width: 200px">
  <input type="submit" value="Submit">
</form>
<% } %>

